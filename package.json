{
    "name": "mizipets-api",
    "version": "0.0.1",
    "description": "Mizipets is a mobile application give services for pets",
    "author": "",
    "private": true,
    "license": "UNLICENSED",
    "scripts": {
        "prebuild": "rimraf dist",
        "build": "nest build",
        "format": "prettier --write \"src/**/*.ts\"",
        "start": "nest start",
        "start:dev": "nest start --watch",
        "start:staging": "ENV=staging nest start",
        "start:debug": "nest start --debug --watch",
        "start:prod": "node dist/main",
        "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:cov": "jest --coverage",
        "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
        "test:e2e": "jest --config ./jest-e2e.json",
        "test:unit": "jest --config ./jest-unit.json",
        "seed:run": "npm run seed:revert && ts-node ./seed/seed-run.ts",
        "seed:run:staging": "ENV=staging npm run seed:revert && ts-node ./seed/seed-run.ts",
        "seed:revert": "ts-node ./seed/seed-revert.ts"
    },
    "dependencies": {
        "@firebase/messaging": "^0.9.12",
        "@nestjs-modules/mailer": "^1.6.1",
        "@nestjs/common": "^8.0.0",
        "@nestjs/config": "^1.2.0",
        "@nestjs/core": "^8.0.0",
        "@nestjs/jwt": "^8.0.0",
        "@nestjs/passport": "^8.2.1",
        "@nestjs/platform-express": "^8.0.0",
        "@nestjs/platform-socket.io": "^8.4.1",
        "@nestjs/swagger": "^5.2.0",
        "@nestjs/testing": "^8.0.0",
        "@nestjs/throttler": "^2.0.0",
        "@nestjs/typeorm": "^8.0.3",
        "@nestjs/websockets": "^8.4.1",
        "@types/socket.io": "^3.0.2",
        "axios": "^0.26.0",
        "bcrypt": "^5.0.1",
        "class-transformer": "^0.5.1",
        "class-validator": "^0.13.2",
        "compression": "^1.7.4",
        "firebase": "^9.6.11",
        "handlebars": "^4.7.7",
        "helmet": "^5.0.2",
        "http-status-codes": "^2.2.0",
        "morgan": "^1.10.0",
        "nestjs-i18n": "^8.2.2",
        "nodemailer": "^6.7.2",
        "passport-jwt": "^4.0.0",
        "pg": "^8.7.3",
        "rimraf": "^3.0.2",
        "rxjs": "^7.5.4",
        "swagger-ui-express": "^4.3.0",
        "ts-node": "^10.6.0",
        "typeorm": "^0.2.45"
    },
    "devDependencies": {
        "@nestjs/cli": "^8.2.1",
        "@nestjs/schematics": "^8.0.0",
        "@types/express": "^4.17.13",
        "@types/jest": "27.4.0",
        "@types/node": "^16.10.0",
        "@types/nodemailer": "^6.4.4",
        "@types/supertest": "^2.0.11",
        "@typescript-eslint/eslint-plugin": "^5.0.0",
        "@typescript-eslint/parser": "^5.0.0",
        "eslint": "^8.0.1",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-prettier": "^4.0.0",
        "jest": "^27.2.5",
        "prettier": "^2.3.2",
        "source-map-support": "^0.5.20",
        "supertest": "^6.1.3",
        "ts-jest": "^27.0.3",
        "ts-loader": "^9.2.3",
        "tsconfig-paths": "^3.10.1",
        "typescript": "^4.3.5"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": "src",
        "testRegex": ".*\\.spec\\.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "collectCoverageFrom": [
            "**/*.(t|j)s"
        ],
        "coverageDirectory": "../coverage",
        "testEnvironment": "node"
    }
}
